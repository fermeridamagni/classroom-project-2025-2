{
  "expo": {
    "name": "classroom-project-2025-2-mobile",
    "slug": "classroom-project-2025-2-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/resources/icon.png",
    "scheme": "com.fermeridamagni.classroom-project-2025-2.mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.fermeridamagni.classroomproject20252mobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./src/assets/images/resources/android-icon-foreground.png",
        "backgroundImage": "./src/assets/images/resources/android-icon-background.png",
        "monochromeImage": "./src/assets/images/resources/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.fermeridamagni.classroomproject20252mobile"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/resources/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      "expo-localization",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "46466e1f-854b-4388-b30e-8ed4c14801d3"
      }
    }
  }
}
